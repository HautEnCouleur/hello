block top-comment
doctype html
html.no-js(__!=-language_attributes())
	head
		meta(charset!=-bloginfo( 'charset' ))
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='profile' href='http://gmpg.org/xfn/11')
		link(rel='pingback' href!=-bloginfo( 'pingback_url' ))
		
		- wp_head();
		
	body(__!=-body_class())
		#page.site.page-full-height
			//- a.skip-link.screen-reader-text(href='#content')
			//- 	- esc_html_e( 'Skip to content', '###' ) ;
			
			header#masthead.site-header(role='banner')
				- $locations = get_nav_menu_locations();
				nav.navbar.navbar-inverse.navbar-static-top
					.container-fluid
						.navbar-header
							a.navbar-toggle.collapsed(href='#', data-toggle='offcanvas', data-target='.offcanvas-sidebar')
								i.fa.fa-lg.fa-bars
							- if ( get_header_image() ) :
							a.navbar-logo(href!=esc_url( home_url( '/' ) ))
								img(src!=-header_image())
							- elseif ( display_header_text() ) :
							a.navbar-brand(href!=esc_url( home_url( '/' ) ))
								- bloginfo( 'name' );
							- endif;
						
						#header-menu.offcanvas-xs
										
							- get_search_form();
							
							ul.nav.navbar-nav
							- if ( has_nav_menu( 'top-menu' ) ) :
							- wp_nav_menu(array( 'container_class' => 'menu-header', 'theme_location' => 'top-menu', 'items_wrap' => '<ul id="%1$s" class="%2$s nav navbar-nav">%3$s</ul>', 'walker' => new BS3_Walker_Nav_Menu));
							- endif;				 

							.nav.navbar-nav.navbar-right.language
								- if( hello_is_plugin_active('lang') ) :
									- nav_language_switcher();
									// - qtranxf_generateLanguageSelectCode(array('type' => 'dropdown')) ;
								- endif;
			
			// #masthead
			#content.content
				block content
			.push
		// #page
		// footer is OUT of the #page.site container	
		footer#colophon.site-footer(role='contentinfo')
			.container-fluid
				.row
					.col-xs-12.col-md-4.footer-text
						- hello_footer_text();
					.col-xs-12.col-md-4
		// #colophon
		- wp_footer();
	// body
// html
